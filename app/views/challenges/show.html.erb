<div class="challenge-title"><h3><%= @challenge.title %></h3></div>
<div class="challenge-description"><%= raw(@challenge.description) %></div>
<div class="challenge-tutorial"><%= @challenge.tutorial %></div>

<%= image_tag "Robot_icon.svg", :id => "robot-icon" %>
<%= image_tag "cloud.jpg", :id => "cloud" %>
<div class="canvas-and-console">
	<div class="canvas-side">
		<canvas id="myCanvas" width="400" height="400"></canvas>
	</div>
	<div class="console-side">

	  <div class="game-console">
	    <%= render partial: "challenges/console", locals: { game: @game, challenge: @challenge, success_message: @success_message, failure_message: @failure_message } %>
	  </div>

		<div class="challenge-nav-bar">
		  <ul class="challenge-navigation">
			  <%= render partial: "challenges/navigation", locals: { challenge: @challenge, previous_challenge: @previous_challenge, prev_game: @prev_game, next_challenge: @next_challenge, next_game: @next_game } %>
			</ul>
		</div>
	</div>
</div>
